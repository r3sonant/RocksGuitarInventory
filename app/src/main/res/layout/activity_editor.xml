<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    tools:context=".EditorActivity">


    <!-- Product Name category -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Name Field Label -->
        <TextView
            style="@style/LabelStyle"
            android:text="Product Name" />

        <!-- Name field -->
        <EditText
            android:id="@+id/edit_product_name"
            style="@style/EditTextStyle"
            android:hint="Product Name"
            android:inputType="textCapWords" />

    </LinearLayout>

    <!-- Price category -->
    <LinearLayout
        android:id="@+id/container_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Label -->
        <TextView
            style="@style/LabelStyle"
            android:text="Price" />

        <!-- Price field -->
        <EditText
            android:id="@+id/edit_product_price"
            style="@style/EditTextStyle"
            android:hint="Price"
            android:inputType="numberDecimal" />

    </LinearLayout>

    <!-- Quantity category -->
    <LinearLayout
        android:id="@+id/container_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Label -->
        <TextView
            style="@style/LabelStyle"
            android:text="Quantity" />

        <!-- Price field -->
        <EditText
            android:id="@+id/edit_product_quantity"
            style="@style/EditTextStyle"
            android:hint="Quantity"
            android:inputType="number" />

    </LinearLayout>

    <!-- Product Supplier category -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Supplier Field Label -->
        <TextView
            style="@style/LabelStyle"
            android:text="Supplier" />

        <!-- Supplier field -->
        <EditText
            android:id="@+id/edit_product_supplier"
            style="@style/EditTextStyle"
            android:hint="Supplier"
            android:inputType="textCapWords" />

    </LinearLayout>

    <!-- Product Supplier Email category -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Supplier Field Label -->
        <TextView
            style="@style/LabelStyle"
            android:text="Supplier Email" />

        <!-- Supplier field -->
        <EditText
            android:id="@+id/edit_product_supplier_email"
            style="@style/EditTextStyle"
            android:hint="SupplierEmail"
            android:inputType="textCapWords" />

    </LinearLayout>

    <!-- Layout to hold the icrement / decrement edittext, label and buttons. Hidden in create product -->
    <LinearLayout
        android:id="@+id/incDecLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Increment / Decrement multipier label view -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inc/Dec Quantity by:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <!-- Increment / Decrement multiplier -->
        <EditText
            android:id="@+id/multiplyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="1" />

        <!-- Order more buttons -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Decrease quantity button -->
            <ImageButton
                android:id="@+id/decrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/increase"
                android:focusable="false"
                android:src="@drawable/ic_remove_black_24dp"
                android:text="Decrease" />

            <!-- Increase quantity button -->
            <ImageButton
                android:id="@+id/increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:focusable="false"
                android:src="@drawable/ic_add_black_24dp"
                android:text="Increase" />

        </RelativeLayout>

    </LinearLayout>


    <!-- Layout for the camera button and imageView -->
    <LinearLayout
        android:id="@+id/cameraImageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Take picture button -->
        <RelativeLayout
            android:id="@+id/takePictureLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/takePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_camera_alt_black_24dp" />

        </RelativeLayout>

        <!-- Product image layout -->
        <RelativeLayout
            android:id="@+id/productImageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </LinearLayout>

    <!-- Order More button -->
    <RelativeLayout
        android:id="@+id/orderMoreLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:focusable="false"
            android:text="Order More" />
    </RelativeLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    tools:context=".EditorActivity">


    <!-- Product Name category -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Name Field Label -->
        <TextView
            style="@style/LabelStyle"
            android:text="Product Name" />

        <!-- Name field -->
        <EditText
            style="@style/EditTextStyle"
            android:id="@+id/edit_product_name"
            android:hint="Product Name"
            android:inputType="textCapWords" />

    </LinearLayout>

    <!-- Price category -->
    <LinearLayout
        android:id="@+id/container_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Label -->
        <TextView
            style="@style/LabelStyle"

            android:text="Price" />

            <!-- Price field -->
            <EditText
                style="@style/EditTextStyle"
                android:id="@+id/edit_product_price"
                android:hint="Price"
                android:inputType="numberDecimal" />

    </LinearLayout>

    <!-- Quantity category -->
    <LinearLayout
        android:id="@+id/container_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Label -->
        <TextView
            style="@style/LabelStyle"
            android:text="Quantity" />

            <!-- Price field -->
            <EditText
                style="@style/EditTextStyle"
                android:id="@+id/edit_product_quantity"
                android:hint="Quantity"
                android:inputType="number" />

    </LinearLayout>

    <!-- Product Supplier category -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Supplier Field Label -->
        <TextView
            style="@style/LabelStyle"
            android:text="Supplier" />

        <!-- Supplier field -->
        <EditText
            style="@style/EditTextStyle"
            android:id="@+id/edit_product_supplier"
            android:hint="Supplier"
            android:inputType="textCapWords" />

    </LinearLayout>

    <!-- Product Supplier Email category -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Supplier Field Label -->
        <TextView
            style="@style/LabelStyle"
            android:text="Supplier Email" />

        <!-- Supplier field -->
        <EditText
            style="@style/EditTextStyle"
            android:id="@+id/edit_product_supplier_email"
            android:hint="SupplierEmail"
            android:inputType="textCapWords" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/takePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera_alt_black_24dp" />

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- Button Panel - This is hidden on the add product view but visible on the edit view -->
    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inc/Dec Quantity by:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

            <EditText
                android:id="@+id/multiplyer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/decrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/increase"
                    android:focusable="false"
                    android:text="Decrease"
                    android:src="@drawable/ic_remove_black_24dp"/>

                <ImageButton
                    android:id="@+id/increase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:focusable="false"
                    android:text="Increase"
                    android:src="@drawable/ic_add_black_24dp"/>

            </RelativeLayout>

        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:focusable="false"
                android:text="Order More" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
